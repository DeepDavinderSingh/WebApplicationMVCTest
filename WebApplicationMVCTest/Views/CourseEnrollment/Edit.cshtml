@model Enrollment
@{
    ViewData["Title"] = "Edit";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Enrolled Student </h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>
        
   <table class="table table-bordered table-striped" style="width:100%">

        <thead>
            <tr>
                <th class="col-6"><label asp-for="StudentID"class="col-6">StudentName</label></th>
                <th class="col-6"><label asp-for="CourseID" class="col-6">CourseName</label></th>
            </tr>
        </thead>
        
        <tbody>
            <tr>
            <td class="col-6">
            <select asp-for="StudentID" class="form-control col-6" asp-items="ViewBag.StudentID"></select>
            <span asp-validation-for="StudentID" class="text-danger"></span>
            </td>
            <td class="col-6">
            <select asp-for="CourseID" class="form-control col-6" asp-items="ViewBag.CourseID"></select>
            <span asp-validation-for="CourseID" class="text-danger"></span>
            </td>    
            </tr>

            <tr> 
            <td class="col-6">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="CourseEnrollment" asp-action="Index" class="btn btn-secondary">Back to Homepage</a> 
            </td>    
            </tr>
        
        </tbody>      
    </table>
</div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}